<% if (cupulas[0]) { %>
  <div class="db w-100 cf">
    <div class="v-top w-100 b pt2 pb3 pr3 bt b--light-gray"> Cúpulas </div>
    <div class="v-top w-100 pt2 pb3 pr3">
    <% cupulas.forEach(function(item, index){ %>
        <div class="db fl w-50 f6 mt2 mb3">
          <% if (item['fields']['Desenho técnico']) { %>
            <img class="ba b--light-gray" src= <%= item['fields']['Desenho técnico'][0]["thumbnails"] && item['fields']['Desenho técnico'][0]["thumbnails"]["large"]['url'] %> />
          <% } %>
          <% if (item['fields']['Material']) { %>
            <div class="mt2">
            <%= item['fields']['Código'] + " — " + item['fields']['Material']%>
            </div>
          <% } %>
        </div>
    <% }); %>
  </div>
</div>
<% } %>
