<% if (variations[0]) { %>
<div>
    <div class="w-100 b pt2 pb3 pr3 mt3"> Variações deste produto </div>
    <div class="w-100 pt2 pb3 pr3">
    <% variations.forEach(function(item, index){ %>
      <% if (item['fields']['Fotos']) { %>
        <a class="link black" href= <%= "/produtos/" + item['fields']['Código'] %> >
        <div class="pr2 db fl w-third-l w-50 f6 mt2">
          <% if (item['fields']['Fotos']) { %>
            <img src= <%= item['fields']['Fotos'][0]["thumbnails"]["large"]['url'] %> alt="Siema image" />
          <% } %>
            <%= item['fields']['Código'] %>
        </div>
        </a>
        <% } %>
    <% }); %>
  </div>
</div>
<% } %>
